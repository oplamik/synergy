a = int(input("Введите целое число: "))

if a == 0:
    print("нулевое число")
else:
    # Определяем положительное/отрицательное
    if a > 0:
        b = "положительное"
    else:
        b = "отрицательное"
    
    # Проверяем четность
    if a % 2 == 0:
        c = "четное"
        print(f"{b} {c} число")
    else:
        print("число не является четным")
