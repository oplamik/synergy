pets = {}

def get_pet_info():
    name = input("Введите кличку питомца: ")
    pet_type = input("Введите вид питомца: ")
    age = int(input("Введите возраст питомца: "))
    owner = input("Введите имя владельца: ")
    
    # Определяем правильное окончание для возраста
    if 11 <= age % 100 <= 14:
        age_str = f"{age} лет"
    else:
        last_digit = age % 10
        if last_digit == 1:
            age_str = f"{age} год"
        elif 2 <= last_digit <= 4:
            age_str = f"{age} года"
        else:
            age_str = f"{age} лет"
    
    pets[name] = {
        'Вид питомца': pet_type,
        'Возраст питомца': age,
        'Имя владельца': owner,
        'Возраст строка': age_str  # Добавляем строку с правильным склонением
    }

def print_pet_info(name):
    pet = pets[name]
    print(f'Это {pet["Вид питомца"]} по кличке "{name}". Возраст питомца: {pet["Возраст строка"]}. Имя владельца: {pet["Имя владельца"]}')

# Добавляем питомцев
while True:
    get_pet_info()
    if input("Добавить еще одного питомца? (да/нет): ").lower() != 'да':
        break

# Выводим информацию о всех питомцах
for name in pets.keys():
    print_pet_info(name)
    print()
